{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.songID}}>
            <td>{{this.songID}}</td>
            <td>{{this.title}}</td>
            <td>{{this.duration}}</td>
            <td>{{this.numberOfStreams}}</td>
            <td>{{this.album}}</td>
            <td>{{this.artist}}</td>
            <td>{{this.genre}}</td>
            <td><button onclick="deleteSong({{this.songID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_song.js"></script>


{{!-- Form to add a record to the table using standard HTML forms --}}
<h2>Adding Data using an HTML form</h2>
<p>To add a new song, please enter their information below and click `Submit`!</p>
<form id="add-song-form" method="POST" action="/add-song-form">
    <label for="input-title">Title: </label>
    <input type="text" name="input-title" id="input-title-html">

    <label for="input-duration">Duration: </label>
    <input type="text" name="input-duration" id="input-duration-html">

    <label for="input-album">Album: </label>
    <select name="input-album" id="input-album-html">
        <option value="">Select an Album</option>
        {{#each albums}}
        <option value="{{this.albumID}}">{{this.title}}</option>
        {{/each}}
    </select>

    <label for="input-artist">Artist</label>: </label>
    <select name="input-artist" id="input-artist-html">
        <option value="">Select an Artist</option>
        {{#each artists}}
        <option value="{{this.artistID}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for="input-genre">Genre</label>:</label>
    <select name="input-genre" id="input-genre">
        <option value="">Select a Genre</option>
        {{#each genres}}
        <option value="{{this.genreID}}">{{this.genreID}}</option>
        {{/each}}
    </select>

    <input type="submit">
</form>